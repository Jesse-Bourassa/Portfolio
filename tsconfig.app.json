{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,           // required for project references
    "declaration": true,         // so the referencing project can read .d.ts
    "declarationDir": "dist/types/app",
    "outDir": "dist/app",
    // ...plus your other rules...
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue"
  ]
}
