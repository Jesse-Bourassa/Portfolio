{
  "compilerOptions": {
    "composite": true,           // required for project references
    // If you do not need runtime .js, but still want .d.ts
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "dist/types/node",
    // If you *need* to allow .ts extension imports AND produce .d.ts,
    // you can keep "allowImportingTsExtensions": true,
    // but you must set noEmit or emitDeclarationOnly.
    "allowImportingTsExtensions": true,

    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "skipLibCheck": true,
    // ... your linting stuff ...
    "strict": true
  },
  "include": ["vite.config.ts"]
}
